    <view class="title">偏好</view>
    <view class="preferenceDiv">
        <view class="preferItem">性能</view>
        <view class="preferItem">拍照</view>
        <view class="preferItem">视频</view>
        <view class="preferItem">游戏</view>
        <view class="preferItem">轻薄</view>
        <view class="preferItem">续航</view>
    </view>
</view>
