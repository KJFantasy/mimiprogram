            <input type="number" maxlength="5" class="inputPriceRange" placeholder="最高价"></input>
        </view>
        <view class="priceRangeSeg">
            <view class="price">不限价格</view>
            <view class="price">0-1499</view>
            <view class="price">1500-1999</view>
            <view class="price">2000-2999</view>
            <view class="price">3000-3999</view>
            <view class="price">4000以上</view>
        </view>
    </view>
</view>
