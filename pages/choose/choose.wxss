page {
  color: #555;
}
.rankingList {
  display: flex;
  flex-wrap: wrap;
  margin-top: 15rpx;
  height: 150rpx;
}
.rankingList .rankingImg {
  align-self: center;
}
.rankingList .rankingImg .phoneImage {
  width: 120rpx;
  height: 120rpx;
  align-self: center;
  margin-left: 20rpx;
}
.rankingList .rankingImg .phoneImage::after {
  content: "";
  display: block;
  width: 18rpx;
  height: 18rpx;
  border-top: 4rpx solid #bebebe;
  border-right: 4rpx solid #bebebe;
  transform: rotate(45deg);
  position: absolute;
  right: 24rpx;
  margin-top: -60rpx;
}
.rankingList .ranking {
  align-self: center;
  margin-left: 25rpx;
  margin-top: -10rpx;
  color: black;
  font-weight: 800;
  font-size: 35rpx;
}
.rankingList .ranking .rankingInfo {
  color: #555555;
  font-size: 20rpx;
  margin-top: 10rpx;
  font-weight: 400;
}
.separation {
  height: 15rpx;
  background-color: rgba(85, 85, 85, 0.1);
}
.choosePhone {
  font-size: 25rpx;
  margin-top: 30rpx;
}
.choosePhone .priceRange {
  margin-top: 30rpx;
}
.choosePhone .priceRange .longPriceRange {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 700rpx;
  margin: 0 auto;
}
.choosePhone .priceRange .longPriceRange .connecter {
  align-self: center;
}
.choosePhone .priceRange .longPriceRange .inputPriceRange {
  width: 300rpx;
  height: 50rpx;
  background-color: rgba(185, 185, 185, 0.15);
  border-radius: 25rpx;
  text-align: center;
}
.choosePhone .priceRange .priceRangeSeg {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 700rpx;
  margin: 0 auto;
}
.choosePhone .priceRange .priceRangeSeg .price {
  width: 220rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: rgba(185, 185, 185, 0.15);
  border-radius: 25rpx;
  margin-top: 20rpx;
}
.preference {
  font-size: 25rpx;
  margin-top: 30rpx;
}
.preference .preferenceDiv {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 700rpx;
  margin: 0 auto;
}
.preference .preferenceDiv .preferItem {
  width: 220rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: rgba(185, 185, 185, 0.15);
  border-radius: 25rpx;
  margin-top: 20rpx;
}
.title {
  margin-left: 30rpx;
  font-size: 30rpx;
  position: relative;
}
.title::before {
  content: " ";
  width: 10rpx;
  height: 100%;
  background-color: #1bbf75;
  color: #1bbf75;
  position: absolute;
  left: -30rpx;
}
.bottomButton {
  display: flex;
  flex-wrap: wrap;
  position: fixed;
  bottom: 0rpx;
  text-align: center;
  font-size: 35rpx;
  height: 100rpx;
}
.bottomButton .reset {
  width: 250rpx;
  height: 100rpx;
  align-self: center;
  line-height: 100rpx;
  background-color: rgba(185, 185, 185, 0.15);
  border-top: 1px solid rgba(185, 185, 185, 0.3);
}
.bottomButton .enter {
  width: 500rpx;
  color: white;
  background-color: #1bbf75;
  line-height: 100rpx;
}
